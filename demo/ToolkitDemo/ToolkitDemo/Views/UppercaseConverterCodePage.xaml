<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="ToolkitDemo.Views.UppercaseConverterCodePage"
             Title="Source Code">

    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Uppercase Converter" HorizontalOptions="Center" FontSize="Large" FontAttributes="Bold"></Label>
            <ScrollView>
                <Label Text="{Binding ResourceContent}"></Label>
            </ScrollView>
            <Button Text="Copy Text" Command="{Binding CopyTextToClipboard}" BorderRadius="20" HeightRequest="40"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
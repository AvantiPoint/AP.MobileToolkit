             xmlns:ap="http://avantipoint.com/mobiletoolkit"
             x:Class="ToolkitDemo.Views.BadgeViewPage" Title="Badge View">
    <ContentPage.ToolbarItems>
        <ToolbarItem Order="Primary" Text="Code Behind" Priority="0" Command="{Binding ShowCodeBehind}" />
    </ContentPage.ToolbarItems>

    <StackLayout Padding="20">
        <ap:BadgeView Text="20" />
    </StackLayout>
</ContentPage>
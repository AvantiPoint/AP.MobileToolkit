<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             xmlns:toolkit="clr-namespace:AP.MobileToolkit.Controls;assembly=AP.MobileToolkit"    
             x:Class="ToolkitDemo.Views.MaterialTimePickerPage" Title="Material TimePicker">
    <ContentPage.ToolbarItems>
        <ToolbarItem Order="Primary" Text="Code Behind" Priority="0" Command="{Binding ShowCodeBehind}"/>
    </ContentPage.ToolbarItems>

    <StackLayout Padding="20">
        <Label Text="Pick time" FontAttributes="Bold" />
        <toolkit:MaterialTimePicker Time="15:01" />
    </StackLayout>
</ContentPage>
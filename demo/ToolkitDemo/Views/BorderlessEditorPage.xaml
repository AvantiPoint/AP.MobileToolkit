<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             xmlns:toolkit="clr-namespace:AP.MobileToolkit.Controls;assembly=AP.MobileToolkit"
             x:Class="ToolkitDemo.Views.BorderlessEditorPage" Title="Borderless Editor">
    <ContentPage.ToolbarItems>
        <ToolbarItem Order="Primary" Text="Code Behind" Priority="0" Command="{Binding ShowCodeBehind}" />
    </ContentPage.ToolbarItems>

    <StackLayout Padding="20">
        <Label Text="Enter text" FontAttributes="Bold" />
        <toolkit:BorderlessEditor Placeholder="Enter something here" AutoSize="TextChanges" />
    </StackLayout>
</ContentPage>
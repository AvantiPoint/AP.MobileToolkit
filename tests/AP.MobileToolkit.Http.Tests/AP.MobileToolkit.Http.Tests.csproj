<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <IsPackable>false</IsPackable>
    <DefineConstants>$(DefineConstants);DISABLE_FORMS_INIT</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="../AP.MobileToolkit.Tests/Mocks/Device/*.cs" Link="Mocks/Device/%(Filename)%(Extension)" />
    <Compile Include="../AP.MobileToolkit.Tests/Mocks/XunitLogger.cs" Link="Mocks/%(Filename)%(Extension)" />
    <Compile Include="../AP.MobileToolkit.Tests/Tests/TestBase.cs" Link="Tests/%(Filename)%(Extension)" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.3.0" />
    <PackageReference Include="AP.MockHttpServer" Version="1.5.0.1061" />
    <PackageReference Include="xunit" Version="2.4.1" />
    <PackageReference Include="xunit.runner.visualstudio" Version="2.4.1">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Moq" Version="4.13.0" />
    <DotNetCliToolReference Include="dotnet-xunit" Version="2.3.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\AP.MobileToolkit.Http\AP.MobileToolkit.Http.csproj" />
  </ItemGroup>

</Project>
